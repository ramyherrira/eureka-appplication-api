{
  "name": "eureka/eureka-appplication-api",
  "description": "Application Eureka Framework - Template App",
  "minimum-stability": "stable",
  "type": "project",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Application\\": "./src"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Application\\Tests\\": "./tests",
      "Application\\Behat\\": "./features/bootstrap/"
    }
  },

  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "8.1.*",
    "ext-json": "*",
    "ext-pdo": "*",

    "eureka/kernel-http": "^5.2",
    "eureka/kernel-console": "^5.1",
    "eureka/component-console": "^5.1",

    "lcobucci/jwt": "^4.2",
    "thecodingmachine/safe": "^1.3",
    "symfony/cache": "^5.4"
  },

  "require-dev": {
    "behat/behat": "^3.12",
    "dg/bypass-finals": "^1.4",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "emuse/behat-html-formatter": "^0.2",
    "justinrainbow/json-schema": "^5.2",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
